{
    "type": "project",
    "license": "proprietary",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/zerai/EventSauceBundle"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "beberlei/assert": "^3.2",
        "eventsauce/doctrine-message-repository": "^0.7",
        "eventsauce/eventsauce": "^0.7",
        "ramsey/uuid": "^3.8",
        "symfony/console": "4.3.*",
        "symfony/dotenv": "4.3.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "4.3.*",
        "symfony/monolog-bundle": "^3.4",
        "symfony/orm-pack": "^1.0",
        "symfony/yaml": "4.3.*"
    },
    "require-dev": {
        "friends-of-behat/symfony-extension": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpstan/phpstan": "^0.11.16",
        "phpstan/phpstan-phpunit": "^0.11.2",
        "prolic/fpp": "dev-master",
        "symfony/test-pack": "^1.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "TodoApp\\": "todo-app/src/",
            "CompostDDD\\Messaging\\": "lib/CompostDDD/messaging/src",
            "EventSauceTools\\": "lib/EventSauceTools/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/",
            "TodoApp\\Tests\\": "todo-app/tests/",
            "CompostDDD\\Tests\\Messaging\\": "lib/CompostDDD/messaging/tests",
            "EventSauceTools\\Tests\\": "lib/EventSauceTools/tests"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.3.*"
        }
    }
}
